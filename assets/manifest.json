---
permalink: /manifest.json
---
{
	"lang": "id",
	"dir": "ltr",
	"name": "{{ site.title }}",
	"short_name": "{{ site.title }}",
  "description": "{{ site.description | strip_newlines }}",
	"background_color": "#ffffff",
  "theme_color": "#ffffff",
	"display": "standalone",
	"orientation": "portrait",
	"start_url": "{{ site.baseurl }}/blog/",
	"icons": [
		{
			"src": "{{ site.baseurl }}/assets/favicon.png",
			"sizes": "any"
		}
	]
}
